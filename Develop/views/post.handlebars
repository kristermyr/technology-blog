<div>
	<div class="card">
		<div>
			<div>
				<h2 class="title is-4">{{title}}</h2>
			</div>
			<div class="content">
			<p>{{content}}</p>
			<div>
				<p>Created by {{User.username}} on {{format_date date_created}}</p>
			</div>
			</div>
		</div>
			
        

		<form class="new-comment-form" data-postid={{id}}>
			<div>
				<textarea id='comment_content' name="comment-body"
				placeholder="Enter a comment here..."
				cols="30"
				rows="2"></textarea>
			</div>
			<div class="btnComment p-2">
				<button class="button btn btn-success" type="submit">Add Comment</button>
			</div>
		</form>
</div>
		

		<h2 class="title is-4">Comments</h2>
		
		{{#each Comments as |comment|}}
		<div class="commentCont">
			<p class="subtitle is-4">{{comment.comment_content}}</p>
			<p class="subtitle is-6">Created by {{comment.User.username}} on {{format_date date_created}}</p>
		</div>
		<br>
		{{/each}} 
</div>

		<script src="/js/comments.js"></script>