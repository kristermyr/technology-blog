{{#each posts as |post|}}


        <h2>
          <a class="postTitle text-uppercase" href="/post/{{post.id}}">{{post.title}}</a>
        </h2>
      

      <div class="col-4">
        <p>Created by
          {{post.user.username}}
          on
          {{format_date post.date_created}}
        </p>
      </div>
			</div>
    <div>
      <p>
        {{post.content}}
      </p>
    </div>
    </div>

  </div>