{{#each posts as |post|}}


        
      

      <div class="card">
        <div class="card-content">
          <h2>
          <a class="title is-4" href="/post/{{post.id}}">{{post.title}}</a>
        </h2>
        <p>Created by
          {{User.username}}
          on
          {{format_date post.date_created}}
        </p>
        </div>
          <div class="content">
          <div class="card-content">
          {{post.content}}
          </div>
          {{/each}}
          </div>
      </div>
    

  